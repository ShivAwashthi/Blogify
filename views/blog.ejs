<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
    <style>
        /* ===== Base Styling ===== */
        body {
            background: linear-gradient(135deg, #e0eafc, #cfdef3);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            transition: background 0.3s ease, color 0.3s ease;
        }

        body.dark-mode {
            background: linear-gradient(135deg, #1f1f1f, #121212);
            color: #f5f5f5;
        }

        nav {
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .main-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        body.dark-mode .main-container {
            background: rgba(30, 30, 30, 0.5);
        }

        .main-container h1 {
            text-align: center;
            font-size: 32px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .blog-image {
            display: block;
            margin: 20px auto;
            width: 100%;
            max-width: 700px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

        .blog-content {
            font-size: 18px;
            line-height: 1.6;
            white-space: pre-wrap; /* handle <pre> text but wrap properly */
            margin-top: 20px;
        }

        /* ===== Author Section ===== */
        .author-box {
            display: flex;
            align-items: center;
            margin-top: 30px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            gap: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .author-box img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #2575fc;
        }

        /* ===== Comments Section ===== */
        .comments-section {
            margin-top: 40px;
        }

        .comments-section h2 {
            font-size: 22px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .comment-form input {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            transition: border 0.3s ease, box-shadow 0.3s ease;
        }

        .comment-form input:focus {
            outline: none;
            border-color: #6a11cb;
            box-shadow: 0 0 10px rgba(106,17,203,0.4);
        }

        .comment-form button {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            border: none;
            padding: 10px 18px;
            border-radius: 10px;
            font-weight: 600;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .comment-form button:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 18px rgba(106,17,203,0.6);
        }

        /* Comment List */
        .comment-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 15px;
            padding: 12px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
        }

        body.dark-mode .comment-item {
            background: rgba(40, 40, 40, 0.5);
        }

        .comment-item img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #333;
        }

        .comment-text {
            flex: 1;
        }

        .comment-text strong {
            display: block;
            margin-bottom: 4px;
        }

        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #fff;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .theme-toggle:hover {
            background: #ddd;
        }

        body.dark-mode .theme-toggle {
            background: #222;
            color: #fff;
        }

        @media (max-width: 768px) {
            .main-container {
                margin: 15px;
                padding: 15px;
            }
            .blog-image {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <!-- Dark Mode Toggle -->
    <div class="theme-toggle" onclick="toggleTheme()">üåô</div>

    <div class="main-container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="blog-image" alt="Blog Image">
        <div class="blog-content"><%= blog.body %></div>

        <div class="author-box">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="Author">
            <div>
                <h4><%= blog.createdBy.fullName %></h4>
                <p>Author</p>
            </div>
        </div>

        <div class="comments-section">
            <h2>Comments (<%= comments.length %>)</h2>
            <% if (locals.user) { %>
                <form class="comment-form" action="/blog/comment/<%= blog._id %>" method="post">
                    <input type="text" placeholder="Enter Your Comment" name="content" required>
                    <button type="submit">Add Comment</button>
                </form>
            <% } %>

            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="comment-item">
                        <img src="<%= comment.createdBy.profileImageURL %>" alt="User">
                        <div class="comment-text">
                            <strong><%= comment.createdBy.fullName %></strong>
                            <p><%= comment.content %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts') %>

    <script>
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            const toggleBtn = document.querySelector('.theme-toggle');
            toggleBtn.textContent = document.body.classList.contains('dark-mode') ? '‚òÄÔ∏è' : 'üåô';
        }
    </script>
</body>
</html>
